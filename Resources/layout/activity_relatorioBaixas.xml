<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/header"
                android:textSize="18dp"
                android:textStyle="bold | italic"
                android:textColor="#000000"
                android:textAlignment="center"
                android:text="RELATÃ“RIO DE BAIXAS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout5"
                android:layout_below="@+id/header"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtCODPESS"
                    android:textSize="13dp"
                    android:textAlignment="textEnd"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Cliente"
                    android:inputType="number"
                    android:digits="0123456789,"
                    android:imeOptions="actionDone"
                    android:paddingBottom="5dp"
                    android:layout_width="100dp"
                    android:layout_height="35dp"/>

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/lblNOMPESS"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@id/textInputLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lblDOC"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_below="@id/lblNOMPESS"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/lblNOMCID"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/lblDOC"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/lblGERAL"
                android:text="GERAL"
                android:layout_alignTop="@+id/textInputLayout5"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@id/header"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
            <CheckBox
                android:id="@+id/ckGERAL"
                android:checked="true"
                android:layout_alignTop="@+id/textInputLayout5"
                android:layout_marginTop="5dp"
                android:layout_marginRight="60dp"
                android:layout_below="@id/header"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/lblSOMA"
                android:text="VALOR TOTAL:"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="#151515"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblNOMPESS" />
            <EditText
                android:id="@+id/txtVLRTOTAL"
                android:layout_below="@id/lblNOMPESS"
                android:layout_marginTop="8dp"
                android:enabled="false"
                android:gravity="center"
                android:focusable="false"
                android:layout_alignParentRight="true"
                android:inputType="number"
                android:layout_width="120dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_below="@id/cardView1"
        app:cardCornerRadius="8dp"
        app:cardElevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#151510"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/lblDATA"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginLeft="18dp"
                android:text="DATA"
                android:layout_width="90dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_toRightOf="@+id/lblDATA"
                android:textColor="#fff"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="CLIENTE"
                android:layout_width="90dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_alignParentRight="true"
                android:textColor="#fff"
                android:textAlignment="textEnd"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="RECEBIDO"
                android:layout_width="90dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/cardView2"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        app:cardElevation="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listView"
            android:layout_below="@id/txtVLRTOTAL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>
