<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_marginBottom="350dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/lblTITLE"
        android:text="Vendedores"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblSELECT"
        android:layout_below="@+id/lblTITLE"
        android:text="Selecione o vendedor :"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/listView"
        android:layout_below="@+id/lblSELECT"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input1"
        android:layout_below="@+id/listView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtDATAI"
            android:hint="Data Inicial"
            android:textSize="13dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:paddingBottom="5dp"
            android:digits="0123456789"
            android:layout_width="100dp"
            android:layout_height="40dp"/>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input2"
        android:layout_below="@+id/listView"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtDATAF"
            android:hint="Data Final"
            android:imeOptions="actionNext"
            android:textSize="13dp"
            android:paddingBottom="5dp"
            android:inputType="number"
            android:digits="0123456789"
            android:layout_width="100dp"
            android:layout_height="40dp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnBUSCAR"
        android:layout_below="@+id/input2"
        android:background="@drawable/buttonrotas"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:text="Buscar Vendedores"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>


    <Button
        android:id="@+id/btnMAPA"
        android:layout_below="@+id/btnBUSCAR"
        android:background="@drawable/buttonrotas"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="20dp"
        android:text="Visualizar Rotas"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

</RelativeLayout>
