<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:padding="10dp"
    android:id="@+id/relativeLayout1">

    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:padding="5dp"
            android:id="@+id/relativeLayout">

            <TextView
                android:text="Clientes"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="#393939"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/header" />
            <EditText
                android:hint="Codigo"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="15sp"
                android:digits="0123456789"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:id="@+id/txCODPESS" />

            <RadioGroup
                android:checkedButton="@+id/rbCPF"
                android:layout_below="@id/txCODPESS"
                android:id="@+id/radioGroup"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/control_switch_background_border"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="3dp"
                    android:id="@+id/rbCPF"
                    android:background="@drawable/control_switch_background_selector_middle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="CPF"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/control_switch_color_selector"
                    tools:ignore="MissingDimension" />
                <RadioButton
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/rbOUTRO"
                    android:background="@drawable/control_switch_background_selector_middle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Outro"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/control_switch_color_selector"
                    tools:ignore="MissingDimension"/>
                <RadioButton
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/rbCNPJ"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/control_switch_background_selector_middle"
                    android:button="@null"
                    android:gravity="center"
                    android:text="CNPJ"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/control_switch_color_selector" 
                    tools:ignore="MissingDimension"/>
            </RadioGroup>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLIDTPESS"
                android:layout_below="@+id/txCODPESS"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txIDTPESS"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="DOCUMENTO"
                    android:imeOptions="actionNext"
                    android:paddingBottom="5dp"
                    android:inputType="number"
                    android:digits="0123456789.\"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLNOMPESS"
                android:layout_below="@+id/inpLIDTPESS"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txNOMPESS"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Nome"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLNOMFANTA"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/inpLNOMPESS"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txNOMFANTA"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Nome fantasia"
                    android:paddingBottom="5dp"
                    android:imeOptions="actionNext"
                    android:textColor="#000"
                    android:textAlignment="textStart"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLNROINEST"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/inpLNOMFANTA"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txNROINEST"
                    android:inputType="numberDecimal"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Insc. estadual"
                    android:paddingBottom="5dp"
                    android:digits="0123456789.-"
                    android:imeOptions="actionNext"
                    android:textColor="#000"
                    android:textAlignment="textStart"
                    android:layout_width="150dp"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLNROCEP"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/inpLNOMFANTA"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txNROCEP"
                    android:inputType="numberDecimal"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="C.E.P"
                    android:paddingBottom="5dp"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:textColor="#000"
                    android:textAlignment="textStart"
                    android:layout_width="150dp"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLDSCENDER"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/inpLNROINEST"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txDSCENDER"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Endereço"
                    android:inputType="text"
                    android:paddingBottom="5dp"
                    android:imeOptions="actionNext"
                    android:textColor="#000"
                    android:textAlignment="textStart"
                    android:layout_width="250dp"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLNROENDER"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_below="@+id/inpLNROINEST"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txNROENDER"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="N°."
                    android:inputType="numberDecimal"
                    android:paddingBottom="5dp"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:textColor="#000"
                    android:textAlignment="textEnd"
                    android:layout_width="80dp"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLCPLENDER"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/inpLNROENDER"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txCPLENDER"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Complemento."
                    android:paddingBottom="5dp"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textColor="#000"
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLNOMBAIRR"
                android:layout_width="match_parent"
                android:layout_below="@id/inpLCPLENDER"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txNOMBAIRR"
                    android:fontFamily="sans-serif-condensed"
                    android:maxLines="1"
                    android:hint="Bairro"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textColor="#000"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLCODMUNIC"
                android:layout_width="75dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/inpLNOMBAIRR"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txCODMUNIC"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Munic."
                    android:inputType="numberDecimal"
                    android:digits="0123456789"
                    android:paddingBottom="5dp"
                    android:imeOptions="actionNext"
                    android:textColor="#000"
                    android:textAlignment="textEnd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpLNONMUNIC"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="85dp"
                android:layout_below="@+id/inpLNOMBAIRR"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txNOMMUNIC"
                    android:fontFamily="sans-serif-condensed"
                    android:editable="false"
                    android:textColor="#000"
                    android:paddingBottom="5dp"
                    android:imeOptions="actionNext"
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/inpLCODMUNIC"
                android:id="@+id/relativeLayout2">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txNROCELUL"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="numberDecimal"
                        android:textAlignment="textStart"
                        android:digits="0123456789"
                        android:hint="Celular"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txNROFONEC"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="textStart"
                        android:hint="Fixo"
                        android:paddingBottom="5dp"
                        android:inputType="numberDecimal"
                        android:digits="0123456789"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_below="@id/relativeLayout2"
                android:id="@+id/linearLayout1">

                <Button
                    android:text="Salvar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnSalvar" />
                <Button
                    android:text="Limpar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnLimpar" />
                <Button
                    android:text="Excluir"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnExcluir" />

            </LinearLayout>
            <Button
                android:layout_below="@id/linearLayout1"
                android:text="Buscar CNPJ"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnConsultaCNPJ" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
