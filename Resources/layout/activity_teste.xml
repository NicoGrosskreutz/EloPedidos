<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:id="@+id/progressBar" />

    </LinearLayout>

    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">



        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayoutScroll">

            <EditText
                android:layout_alignRight="@id/header"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textAlignment="textEnd"
                android:textSize="10sp"
                android:textColor="#000"
                android:layout_marginTop="-5dp"
                android:id="@+id/txDevice"/>


            <android.support.v7.widget.CardView
                android:layout_width="20dp"
                android:id="@+id/cv_radius"
                android:layout_height="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:contentPadding="0dp">
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/lblPEDIDO"
                android:text="Pedido"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#393939"
                android:textSize="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpDATAI"
                android:layout_below="@id/lbSITPEDID"
                android:layout_alignParentRight="true"
                android:layout_marginRight="120dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txData"
                    android:textSize="13dp"
                    android:textAlignment="textEnd"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Data Emissao"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:paddingBottom="5dp"
                    android:layout_width="100dp"
                    android:layout_height="35dp"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpDATAF"
                android:layout_below="@+id/lbSITPEDID"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@id/txtDATARET"
                    android:textSize="13dp"
                    android:textAlignment="textEnd"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="Data Retorno"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:paddingBottom="5dp"
                    android:layout_width="100dp"
                    android:layout_height="35dp"/>

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/lbSITPEDID"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/lblPEDIDO"
                android:textAlignment="textStart"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textColor="#393939"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpNROPEDID"
                android:layout_below="@+id/lbSITPEDID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txNROPEDID"
                    android:textSize="13dp"
                    android:textAlignment="textEnd"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="N°Pedido"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:paddingBottom="5dp"
                    android:layout_width="80dp"
                    android:layout_height="35dp"/>

            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/inpNROPEDID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inpCODCLIENTE"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txCODPESS"
                        android:fontFamily="sans-serif-condensed"
                        android:hint="Cliente"
                        android:textAlignment="textEnd"
                        android:textSize="13dp"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:paddingBottom="5dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/intNOMPESS"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/inpCODCLIENTE"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <android.support.design.widget.TextInputEditText
                        android:id="@id/txNOMFANTA"
                        android:textSize="13dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:inputType="text"
                        android:enabled="false"
                        android:imeOptions="actionNext"
                        android:paddingBottom="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/lblPRODUTOS"
                android:text="Produtos"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:background="#393939"
                android:textColor="#FFF"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:paddingBottom="3dp"
                android:layout_marginTop="10sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1" />

            <ListView
                android:id="@+id/listView"
                android:divider="#929292"
                android:dividerHeight="1.5dp"
                android:minWidth="25px"
                android:minHeight="25px"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_width="100px"
                android:layout_height="137.0dp"
                android:layout_below="@id/lblPRODUTOS"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp" />
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/listView"
                android:padding="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="5dp"
                android:background="#0277bd">
                <TextView
                    android:text="Valor Total: "
                    android:textSize="15sp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#FFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lblVLRTOT" />
                <TextView
                    android:text="0,00"
                    android:textSize="15sp"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:textColor="#FFF"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_width="128.0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/lblVLRTOT"
                    android:layout_below="@id/listView"
                    android:id="@+id/lbTotal"
                    android:layout_marginRight="1.5dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_below="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inpCODPROD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txCODPROD"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="textEnd"
                        android:hint="Prodduto"
                        android:textSize="13dp"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:paddingBottom="5dp"
                        android:layout_width="75dp"
                        android:layout_height="35dp"/>

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inpQTD"
                    android:layout_toRightOf="@id/inpCODPROD"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txQtd"
                        android:hint="Qtde."
                        android:digits="0123456789,"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="textEnd"
                        android:textSize="13dp"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:paddingBottom="5dp"
                        android:layout_width="60dp"
                        android:layout_height="35dp"/>

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inpVALOR"
                    android:layout_toRightOf="@+id/inpQTD"
                    android:layout_marginLeft="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txPreco"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="textEnd"
                        android:textSize="13dp"
                        android:hint="Preço"
                        android:inputType="number"
                        android:digits="0123456789,"
                        android:imeOptions="actionNext"
                        android:paddingBottom="5dp"
                        android:layout_width="70dp"
                        android:layout_height="35dp"/>

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inpTOTAL"
                    android:layout_toRightOf="@id/inpVALOR"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txTotal"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="textEnd"
                        android:hint="Valor total"
                        android:textSize="13dp"
                        android:inputType="number"
                        android:enabled="false"
                        android:imeOptions="actionNext"
                        android:paddingBottom="5dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp"/>

                </android.support.design.widget.TextInputLayout>

                <CheckBox
                    android:id="@+id/ckPrazo"
                    android:layout_marginTop="10dp"
                    android:text="Brinde"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:enabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/inpTOTAL"/>

            </RelativeLayout>
            <EditText
                android:id="@+id/txNOMPROD"
                android:inputType="text"
                android:textSize="15dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="-10dp"
                android:enabled="false"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_below="@id/relativeLayout2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/txtSALDO"
                android:layout_alignParentRight="true"
                android:inputType="text"
                android:textSize="15dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="-10dp"
                android:enabled="false"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_below="@id/relativeLayout2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnExcluirProd"
                android:text="Excluir"
                android:textSize="15sp"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@+id/btnSalvarProd"
                android:layout_alignParentRight="true" />
            <Button
                android:id="@+id/btnSalvarProd"
                android:text="Salvar"
                android:textSize="15sp"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/txNOMPROD" />

            <TextView
                android:text="Caixa/ Pacote:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_below="@id/txNOMPROD"
                android:id="@+id/lblCAIXA" />
            <CheckBox
                android:text=""
                android:enabled="false"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txNOMPROD"
                android:layout_toRightOf="@+id/lblCAIXA"
                android:id="@+id/ckCXPC" />

            <TextView
                android:text="Á prazo:"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="3dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_below="@+id/lblCAIXA"
                android:id="@+id/label11" />
            <CheckBox
                android:text=""
                android:enabled="false"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblCAIXA"
                android:layout_toRightOf="@id/label11"
                android:id="@+id/ckPrazo" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inpOBSERVACAO"
                android:layout_marginTop="5dp"
                android:layout_below="@id/btnExcluirProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txDSCOBSER"
                    android:fontFamily="sans-serif-condensed"
                    android:textAlignment="center"
                    android:hint="Observações"
                    android:textSize="13dp"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@id/inpOBSERVACAO"
                android:gravity="center">
                <Button
                    android:text="Salvar"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txDSCOBSER"
                    android:id="@+id/btnSalvar"
                    android:layout_alignParentRight="true" />
                <Button
                    android:text="Excluir"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/btnLimpar"
                    android:layout_below="@id/txDSCOBSER"
                    android:id="@+id/btnExcluir" />
                <Button
                    android:text="Imprimir"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/btnExcluir"
                    android:layout_below="@id/txDSCOBSER"
                    android:id="@+id/btnImprimir" />
                <Button
                    android:text="Limpar"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txDSCOBSER"
                    android:layout_toLeftOf="@id/btnSalvar"
                    android:id="@+id/btnLimpar" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="horizontal"
        android:background="#FF1D1E1D"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <TextView
            android:textColor="#FFF"
            android:text="Há uma nova atualização disponivél !"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingButton"
                android:layout_alignParentRight="true"
                app:backgroundTint="#FFFF"
                app:fabSize="mini"
                android:src="@mipmap/download_icon"
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
